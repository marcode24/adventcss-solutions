---
interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
}

const { title, description, href, image } = Astro.props;
---

<div class="card">
  <div class="card-body">
    <div class="image">
      <img src={image} alt={title} />
    </div>
    <div class="content">
      <h3 class="title">{title}</h3>
      <p class="description">{description}</p>
      <a href={href} class="btn btn-primary"><span>View solution</span></a>
    </div>
  </div>
</div>

<style lang="">
	.card {
		padding: 1rem 1.25rem;
		border: 2px solid #00d2ff;
		border-radius: 15px;
		margin: 1rem 0;
		min-height: 10rem;
		background: var(--bg-color-card);
		transform: scale(1);
		transition: all 0.4s ease;
		cursor: default;
	}

	.card:hover {
		transform: scale(1.015);
		transition: all 0.4s ease;
		box-shadow: 0 0 1rem 0 rgba(0, 0, 0, 0.1);
	}

	.card .card-body {
		display: flex;
		flex-direction: row;
		align-items: center;
	}

	.card .card-body .image {
		width: 10rem;
		height: 10rem;
		margin-right: 1rem;
	}

	.card .card-body .image img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		border-radius: 0.5rem;
	}

	.card .card-body .content {
		width: auto;
	}

	.card .card-body .content .title {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
	}

	.card .card-body .content .description {
		font-size: 1rem;
		margin-bottom: 0.5rem;
	}

	.card .card-body .content .btn {
		font-size: 1rem;
		font-weight: 600;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
	}

	.card .card-body .content .btn span {
		display: flex;
		align-items: center;
	}

	.card .card-body .content .btn span::after {
		content: "";
		display: inline-block;
		width: 0.5rem;
		height: 0.5rem;
		margin-left: 0.5rem;
		border-top: 2px solid;
		border-right: 2px solid;
		transform: rotate(45deg);
	}

	.card .card-body .content .btn:hover {
		background: var(--bg-color-btn);
		color: var(--text-color-btn);
	}

	@media (max-width: 768px) {
		.card .card-body {
			flex-direction: column;
		}

		.card .card-body .image {
			width: 100%;
			height: 10rem;
			margin-right: 0;
			margin-bottom: 1rem;
		}

		.card .card-body .content {
			width: 100%;
		}
	}
</style>
